generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Links {
  id             String @id @default(uuid(7))
  urlShort       String @unique
  urlDestination String
  countAccess    Int    @default(0)

  @@index([urlShort])
  @@index([urlDestination])
}
